{
    "manifest_version": 3,
    "name": "Resume Tracker",
    "version": "1.0",
    "description": "Track which resume you used for each job application with MongoDB sync",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://*.mongodb.com/*",
        "https://*.mongodb-api.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}